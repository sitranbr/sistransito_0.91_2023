<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/layout_margin_buttom"
    android:paddingLeft="@dimen/layout_margin_left_right"
    android:paddingRight="@dimen/layout_margin_left_right"
    android:paddingTop="@dimen/layout_margin_top">

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_light"
        android:drawableLeft="@drawable/signup_email"
        android:drawablePadding="@dimen/width_padding"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/width_padding"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:textCursorDrawable="@null"></EditText>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/width_margin_top"
        android:background="@color/yellow_light"
        android:drawableLeft="@drawable/signup_password"
        android:drawablePadding="@dimen/width_padding"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="@dimen/width_padding"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@null"></EditText>


    <com.rey.material.widget.Button
        android:id="@+id/btn_login"
        style="@style/Material.Drawable.Ripple.Wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/widght_margin_top_2"
        android:layout_marginTop="@dimen/widght_margin_top_2"
        android:background="@drawable/btn_white"
        android:drawableLeft="@drawable/signup_name_2"
        android:drawablePadding="@dimen/width_padding"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/width_padding"
        android:text="@string/btn_login"
        android:textColor="@color/pink" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="horizontal">


        <com.rey.material.widget.TextView
            android:id="@+id/btn_forget_passsword"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left"
            android:text="@string/forget_password"
            android:textColor="@color/color_state_tv" />

        <com.rey.material.widget.TextView
            android:id="@+id/btn_register"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:text="@string/register"
            android:textColor="@color/color_state_tv" />
    </LinearLayout>
</LinearLayout>