<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_margin_buttom"
    android:paddingLeft="@dimen/layout_margin_left_right"
    android:paddingRight="@dimen/layout_margin_left_right"
    android:paddingTop="@dimen/layout_margin_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_2"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_parent_result_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/result_layout_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_child_result_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/result_layout_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_result_plate_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/width_margin_8"
                    android:padding="@dimen/width_padding"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />

                <com.rey.material.widget.Button
                    style="@style/Material.Drawable.Ripple.Wave"
                    android:id="@+id/btn_create_ait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/width_margin_8"
                    android:background="@drawable/btn_yellow"
                    android:drawableLeft="@drawable/ic_ait"
                    android:drawablePadding="@dimen/width_padding"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/width_padding_2"
                    android:text="@string/btn_create_ait"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/pink" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widght_margin_top_2"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/rg_type_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_plate_search"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/plate_title"
                    android:checked="true"
                    android:buttonTint="@color/yellow_light"
                    android:textColor="@color/yellow_light" />

                <RadioButton
                    android:id="@+id/rb_chassi_search"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chassi_search"
                    android:checked="false"
                    android:buttonTint="@color/yellow_light"
                    android:textColor="@color/yellow_light" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_radio_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widght_margin_top_2"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/rg_type_search_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_mercosul_search"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/plate_mercosul_search"
                    android:checked="false"
                    android:buttonTint="@color/yellow_light"
                    android:textColor="@color/yellow_light" />

                <RadioButton
                    android:id="@+id/rb_vis_search"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/vis_search"
                    android:checked="false"
                    android:buttonTint="@color/yellow_light"
                    android:textColor="@color/yellow_light" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_radio_seal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widght_margin_top_2"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/rg_type_search_seal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_search_seal"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/seal_search"
                    android:checked="false"
                    android:buttonTint="@color/yellow_light"
                    android:textColor="@color/yellow_light" />

                <RadioButton
                    android:id="@+id/rb_engine_search"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/engine_search"
                    android:checked="false"
                    android:buttonTint="@color/yellow_light"
                    android:textColor="@color/yellow_light" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_plate_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widght_margin_top_2"
            android:background="@color/gray_2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <EditText

                android:id="@+id/et_license_plate_letters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/width_margin_top"
                android:layout_marginTop="@dimen/width_margin_top"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/ic_character"
                android:drawablePadding="@dimen/width_padding"
                android:ems="3"
                android:hint="@string/license_plate_letters"
                android:inputType="textCapCharacters"
                android:maxLength="3"
                android:padding="@dimen/width_padding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null"></EditText>

            <EditText
                android:id="@+id/et_license_plate_numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/width_margin_top"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/ic_number"
                android:drawablePadding="@dimen/width_padding"
                android:ems="3"
                android:hint="@string/plate_numbers"
                android:inputType="number"
                android:maxLength="4"
                android:padding="@dimen/width_padding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/et_chassi_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/width_margin_top"
                android:layout_marginTop="@dimen/width_margin_top"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/ic_character"
                android:drawablePadding="@dimen/width_padding"
                android:ems="10"
                android:maxLength="17"
                android:hint="@string/chassi_number"
                android:inputType="textCapCharacters"
                android:padding="@dimen/width_padding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/et_mercosul_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/width_margin_top"
                android:layout_marginTop="@dimen/width_margin_top"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/ic_character"
                android:drawablePadding="@dimen/width_padding"
                android:ems="10"
                android:maxLength="17"
                android:hint="@string/mercosul_plate_number"
                android:inputType="textCapCharacters"
                android:padding="@dimen/width_padding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/et_vis_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/width_margin_top"
                android:layout_marginTop="@dimen/width_margin_top"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/ic_character"
                android:drawablePadding="@dimen/width_padding"
                android:ems="10"
                android:maxLength="17"
                android:hint="@string/vis_number"
                android:inputType="textCapCharacters"
                android:padding="@dimen/width_padding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/et_seal_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/width_margin_top"
                android:layout_marginTop="@dimen/width_margin_top"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/ic_character"
                android:drawablePadding="@dimen/width_padding"
                android:ems="10"
                android:hint="@string/seal_number"
                android:inputType="textCapCharacters"
                android:padding="@dimen/width_padding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/et_engine_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/width_margin_top"
                android:layout_marginTop="@dimen/width_margin_top"
                android:background="@drawable/edittext_background"
                android:drawableLeft="@drawable/ic_character"
                android:drawablePadding="@dimen/width_padding"
                android:ems="10"
                android:hint="@string/engine_number"
                android:inputType="textCapCharacters"
                android:padding="@dimen/width_padding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null" />

            <com.rey.material.widget.CheckBox
                android:id="@+id/cb_offline_search"
                style="@style/Material.Drawable.CheckBox"
                app:cbd_strokeColor="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/width_margin_top"
                android:checked="false"
                android:gravity="center"
                android:padding="0dip"
                android:text="@string/search_off_line"
                android:textColor="@color/primary"
                />

            <com.rey.material.widget.Button
                android:id="@+id/btn_plate_search"
                style="@style/Material.Drawable.Ripple.Wave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green"
                android:drawableStart="@drawable/ic_send"
                android:drawablePadding="@dimen/width_padding"
                android:gravity="left|center_vertical"
                android:padding="@dimen/width_padding"
                android:text="@string/btn_search_fragment"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>