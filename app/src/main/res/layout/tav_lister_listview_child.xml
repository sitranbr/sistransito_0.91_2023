<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="vertical"
    android:padding="@dimen/width_padding"
    android:paddingTop="@dimen/width_padding" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/show_tav_print"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/width_margin_8"
            android:layout_marginTop="4dp"
            android:background="@drawable/print_button_background"
            android:src="@drawable/ic_printer_vector"
            android:contentDescription="@string/printing"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tv_tav_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_margin_8"
            android:layout_marginRight="60dp"
            android:text="@string/info_tav"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_margin_8"
        android:layout_marginRight="@dimen/width_margin_8"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/indicator_height_1"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/show_tav_childview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/width_padding"
            android:text="child"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>