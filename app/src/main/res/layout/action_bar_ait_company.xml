<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/yellow_action_bar_color"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_auto_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="start"
        android:paddingBottom="@dimen/width_padding_2"
        android:paddingStart="@dimen/padding_left_tab_titulo"
        android:paddingEnd="@dimen/width_padding_2"
        android:paddingTop="@dimen/width_padding_2"
        android:text="@string/ait_pj_title"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/im_pj_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_back_background"
        android:contentDescription="@string/login_two"
        android:padding="@dimen/width_margin_top"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_auto_titulo"
        android:orientation="horizontal"
        android:paddingStart="@dimen/width_padding"
        android:paddingEnd="@dimen/width_padding"
        android:paddingTop="@dimen/width_padding" >


        <ImageView
            android:id="@+id/img_pj_btn_tab_conductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_margin_8"
            android:padding="@dimen/width_padding_4"
            android:src="@drawable/driver_data" />

        <View
            android:layout_width="@dimen/indicator_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/width_margin_8"
            android:background="@color/yellow_line_color" />

        <ImageView
            android:id="@+id/img_pj_btn_tab_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_margin_8"
            android:padding="@dimen/width_padding_4"
            android:src="@drawable/address_data" />

        <View
            android:layout_width="@dimen/indicator_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/width_margin_8"
            android:background="@color/yellow_line_color" />

        <ImageView
            android:id="@+id/img_pj_btn_tab_infraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/width_padding_4"
            android:src="@drawable/infraction_data" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayout1"
        android:layout_alignEnd="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_padding"
        android:paddingEnd="@dimen/width_padding"
        android:paddingTop="@dimen/width_padding" >

        <com.viewpagerindicator.UnderlinePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/indicator_height"
            android:layout_marginBottom="@dimen/action_bar_line_margin"
            android:background="@color/yellow_action_bar_color"
            app:selectedColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
